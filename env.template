# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI API Key (for content refinement)
OPENAI_API_KEY=your_openai_api_key_here

# Email Webhook Secret (optional, for securing webhook endpoints)
WEBHOOK_SECRET=your_webhook_secret_here

# Linear Configuration
LINEAR_API_KEY=your_linear_api_key_here

# Default Linear Team (team name or ID)
DEFAULT_LINEAR_TEAM=WeTest

# Default Linear Project (optional, project name or ID)
DEFAULT_LINEAR_PROJECT=WeapplyPM

# Auto-create tickets in Linear (set to false to only prepare tickets)
AUTO_CREATE_TICKETS=true

# Content Refinement Settings
ENABLE_AI_REFINEMENT=true
MAX_EMAIL_LENGTH=5000
