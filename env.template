# Weapply PM - Email to Linear Service
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3002
NODE_ENV=production

# OpenAI API Key (for AI refinement)
OPENAI_API_KEY=your_openai_api_key_here

# Linear API Key
LINEAR_API_KEY=your_linear_api_key_here

# Linear Webhook Secret (from Linear webhook settings)
LINEAR_WEBHOOK_SECRET=your_webhook_secret_here

# Default Linear Team
DEFAULT_LINEAR_TEAM=WeTest

# Optional: Default Project
DEFAULT_LINEAR_PROJECT=

# Slack Notifications (for urgent tickets)
# Get webhook URL from: Slack App > Incoming Webhooks
SLACK_WEBHOOK_URL=

# Feature Flags
ENABLE_AI_REFINEMENT=true
